@page "/student/Create"
@page "/student/Update/{studentId:int}"
@using TAndCal.Model;
@using TAndCal.Utility.Data.Repository.Interface;
@inject IStudentRepository _studentRepository
@inject Microsoft.AspNetCore.Components.NavigationManager navigation
<h3>Create</h3>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input type="text" class="form-control" @bind="student.Name" />
            </div>
            <div class="form-group">
                <label  class="control-label">Roll No</label>
                <input type="number" class="form-control" @bind="student.RollNo" />
            </div>
            <div class="form-group">
                <label  class="control-label">Class</label>
                <input type="text" class="form-control" @bind="student.Class" />
            </div>
            <div class="form-group">
                <label  class="control-label">Name</label>
                <input type="text" class="form-control" @bind="student.Address" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-light" @onclick="@(() => Createstudent())">Save</button>
                <button class="btn btn-danger" style="margin-left:20px;" @onclick="@cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>
@code {
    [Parameter]
    public int studentId { get; set; }

    StudentModel student = new StudentModel();
    protected override void OnInitialized()
    {
        if (studentId != 0)
        {
            var studentM = _studentRepository.Get(studentId);
            student = studentM;
        }
    }
    protected void Createstudent()
    {

        bool va;
        if (student.Id != 0)
        {
            va = _studentRepository.Update(student);
        }
        else
        {
           var rs = _studentRepository.Insert(student);
            va = true;
        }
            navigation.NavigateTo("/");
            if (va)
            {
                student.Name = string.Empty;
                student.Class = string.Empty;
                student.RollNo = 0;
                student.Address = string.Empty;
                student.Id = 0;
                this.StateHasChanged();
            navigation.NavigateTo("/", true);
            }
            else
            {
                
            }
        }
        void cancel()
        {
            navigation.NavigateTo("/",true);
        }
    }
